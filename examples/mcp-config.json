{
  "servers": {
    "it-assistant": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--network=host",
        "-v", "/var/log:/host/var/log:ro",
        "-v", "./data:/app/data:rw",
        "-v", "/tmp:/app/tmp:rw",
        "mcp-it-assistant"
      ],
      "env": {
        "MCP_TRANSPORT": "stdio",
        "PYTHONUNBUFFERED": "1",
        "TZ": "Europe/Paris"
      }
    }
  },
  "gateway": {
    "port": 3000,
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:3000"]
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 100
    },
    "logging": {
      "level": "info",
      "format": "combined"
    }
  }
}